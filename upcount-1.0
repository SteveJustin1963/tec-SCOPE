ORG 0000h ; Set the origin address

; Define memory locations to store the 32-bit value
Value0 DB 0
Value1 DB 0
Value2 DB 0
Value3 DB 0

START:
    ; Initialize the 32-bit value to zero
    LD A, 0
    LD HL, Value0
    LD (HL), A
    INC HL
    LD (HL), A
    INC HL
    LD (HL), A
    INC HL
    LD (HL), A

    ; Increment the least significant byte (Value0)
    LD HL, Value0
    LD A, (HL)
    INC A
    LD (HL), A

    ; Check for carry and propagate the carry to the next byte (Value1)
    CP 0
    JR NZ, NoCarry1
    INC HL ; Point HL to Value1
    LD A, (HL)
    INC A
    LD (HL), A

NoCarry1:
    ; Check for carry and propagate the carry to the next byte (Value2)
    CP 0
    JR NZ, NoCarry2
    INC HL ; Point HL to Value2
    LD A, (HL)
    INC A
    LD (HL), A

NoCarry2:
    ; Check for carry and propagate the carry to the next byte (Value3)
    CP 0
    JR NZ, NoCarry3
    INC HL ; Point HL to Value3
    LD A, (HL)
    INC A
    LD (HL), A

NoCarry3:
    ; Your code continues here...

    ; To read the 32-bit value into registers
    LD HL, Value0
    LD A, (HL)
    INC HL
    LD B, (HL)
    INC HL
    LD C, (HL)
    INC HL
    LD D, (HL)

    ; Your code to handle requests and display or use the value goes here

    ; Halt or loop as needed
    HALT

END
